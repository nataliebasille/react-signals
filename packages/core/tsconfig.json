{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@natcore/signals-core",
        "incremental": true,
        "paths": {
            "@natcore/signals-core": ["./index"]
        }
    },
}
