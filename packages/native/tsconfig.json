{
    "ts-node": {
        // Do not forget to `npm i -D tsconfig-paths`
        "require": ["tsconfig-paths/register"]
      },
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "..",
        "incremental": true,
        "paths": {
            "@natcore/signals-native": ["index.ts"],
            "@natcore/signals-native/jsx-runtime": ["./jsx-runtime"],
        },
    }
}
